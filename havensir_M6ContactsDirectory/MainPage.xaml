<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="havensir_M6ContactsDirectory.MainPage"
             NavigationPage.HasNavigationBar="False">
    
    
    <Grid RowDefinitions="Auto, *">

        <Border Grid.Row="0" BackgroundColor="White" Padding="10">
            <Label Text="Contacts" FontSize="25" FontAttributes="Bold" TextColor="Black"
           HorizontalOptions="Center" VerticalOptions="Center"/>
        </Border>

        <CollectionView x:Name="ContactsCollectionView"
                Grid.Row="1"
                IsGrouped="True"
                SelectionMode="Single"
                SelectionChanged="ContactsCollectionView_SelectionChanged">

            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Border BackgroundColor="WhiteSmoke" Padding="6">
                        <Label Text="{Binding Title}"
                       FontSize="18"
                       FontAttributes="Bold" />
                    </Border>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Padding="10" Spacing="12">
                        <Image Source="{Binding ImageName}"
                       HeightRequest="50"
                       WidthRequest="50" />
                        <Label Text="{Binding Name}"
                       VerticalOptions="Center"
                       FontSize="16" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>


    </Grid>
</ContentPage>
